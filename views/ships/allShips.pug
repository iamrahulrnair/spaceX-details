extends ./../base

block content 
    .container 
        .row 
            each ship in ships
                .col 
                    .card(style="width: 18rem;")
                        img(src=`${ship.image}` class="card-img-top"  alt="...")
                        .card-body   
                            h1.card-title (#{ship.name})
                            
                            p.card-text want to know more about #{ship.name}?
                            a(href=`/ships-details/${ship._id}`).btn.btn-primary click here
       

